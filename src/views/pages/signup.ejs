<%- contentFor('main') %>
	<div class="container" style="max-width:500px">
		<div class="panel panel-default">

			<div class="panel-body">
				<form role="form" method="post" action="/auth/signup">
					<div class="form-group">
						<input type="text" name="username" id="username" class="form-control input-sm floatlabel" placeholder="Name">
					</div>

					<div class="form-group">
						<input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address">
					</div>

					<div class="row">
						<div class="col-xs-6 col-sm-6 col-md-6">
							<div class="form-group">
								<input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
							</div>
						</div>
						<div class="col-xs-6 col-sm-6 col-md-6">
							<div class="form-group">
								<input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password">
							</div>
						</div>
					</div>

					<input type="submit" value="ثبت نام" class="btn btn-info btn-block" style="background-color: #42a8c0;color: #fff;font-size: 20px;font-family: sans-serif;font-weight:lighter;direction: rtl">

				</form>
				<% if (typeof(signup_message) !== 'undefined') { %>
				   <hr />
				   <div class="alert alert-danger" role="alert" style="direction: rtl"><%=message%></div>
				<%}%>
			</div>
		</div>
	</div>

<%- contentFor('src') %>
<script type="text/javascript">
	wrapper = document.getElementsByClassName('wrapper');
	$(wrapper).css("background-color", "inherit");
	$(wrapper).addClass('new_wrapper').removeClass('wrapper');
</script>